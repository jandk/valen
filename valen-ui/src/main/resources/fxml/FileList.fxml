<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<SplitPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="be.twofold.valen.ui.component.filelist.FileListController"
           dividerPositions="0.25">
    <TreeView fx:id="treeView" SplitPane.resizableWithParent="false"/>
    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="columnName" prefWidth="160.0" text="Name"/>
            <TableColumn fx:id="columnType" prefWidth="40.0" text="Type"/>
            <TableColumn fx:id="columnProp" prefWidth="80.0" text="Properties"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
        </columnResizePolicy>
    </TableView>
</SplitPane>
